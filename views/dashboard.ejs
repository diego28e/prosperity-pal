<%- include('partials/header') %>
<section>
  <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
  <hr />
</section>
<div class="container">
  <h1>Welcome, <%= displayName %></h1>

  <div class="balance-summary">
    <!--     <h3>Total Income: <%= totalIncome.toLocaleString() %></h3>
    <h3>Total Expenses: <%= totalExpenses.toLocaleString() %></h3> -->
    <div class="currentMonth">
      <i class="fas fa-chevron-left" id="prev-month"></i>
      <span id="month-year-display"> <%= formattedDate %> </span>
      <i class="fas fa-chevron-right" id="next-month"></i>
    </div>
    <!-- Add a hidden form to store the current month and year -->
    <form
      id="month-year-form"
      action="/secrets"
      method="GET"
      style="display: none"
    >
      <input type="hidden" name="month" id="month-input" value="<%= month %>" />
      <input type="hidden" name="year" id="year-input" value="<%= year %>" />
    </form>

    <h3>
      Remaining Balance: <%= (totalIncome - totalExpenses).toLocaleString() %>
    </h3>
  </div>
  <div class="incomeExpense">
    <div class="incomeContainer">
      <h2>Income</h2>
      <form id="income-form" action="/income/add" method="POST">
        <div class="amountAndDate">
          <div class="dataBlock">
            <label for="amount">Income amount:</label>
            <input type="text" name="amount" required />
          </div>
          <div class="dataBlock">
            <label for="date">Date:</label>
            <input type="date" name="date" required />
          </div>
        </div>
        <div class="dataBlock">
          <label for="tag">Tag:</label>
          <input type="text" name="tag_name" list="income-tags" required />
        </div>
        <datalist id="income-tags">
          <% if (incomeTags) { %> <% incomeTags.forEach(tag => { %>
          <option value="<%= tag.name %>"><%= tag.name %></option>
          <% }); %> <% } %>
        </datalist>
        <button type="submit">Add Income</button>
      </form>
      <!-- <button class="showButton" data-target="income-list">Show Income</button> -->
    </div>

    <!-- expense container -->
    <div class="expenseContainer">
      <h2>Expense</h2>
      <form id="expense-form" action="/expense/add" method="POST">
        <div class="inputContainer">
          <div class="amountAndDate">
            <div class="dataBlock">
              <label for="amount">Expense amount:</label>
              <input type="text" name="amount" required />
            </div>
            <div class="dataBlock">
              <label for="date">Date:</label>
              <input type="date" name="date" required />
            </div>
          </div>
          <div class="dataBlock">
            <label for="tag">Tag:</label>
            <input type="text" name="tag_name" list="expense-tags" required />
          </div>
          <datalist id="expense-tags">
            <% if (expenseTags) { %> <% expenseTags.forEach(tag => { %>
            <option value="<%= tag.name %>"><%= tag.name %></option>
            <% }); %> <% } %>
          </datalist>
        </div>
        <button type="submit">Add Expense</button>
      </form>
      <!--       <button class="showButton" data-target="expense-list">
        Show expense
      </button> -->
    </div>
  </div>

  <div class="dataDescriptionConainer">
    <!--Display list of income-->
    <div id="income-list" class="income-list">
      <h3>Incomes for the current month:</h3>
      <ul>
        <% incomes.forEach(income => { %>
        <li class="incomeList">
          <p class="incomeBlock">
            <%= income.tag_name %>: <%=
            parseFloat(income.amount).toLocaleString() %>

            <span class="incomeDate"
              ><%= new Date(income.date).toLocaleDateString() %></span
            >
          </p>
          <span class="editDelete"
            ><form action="/income/delete/<%= income.id %>" method="POST">
              <button type="submit" class="deleteButton">
                <i class="fa-solid fa-trash"></i>
              </button></form
          ></span>
        </li>
        <% }); %>
      </ul>
      <h3>Total Income: <%= totalIncome.toLocaleString() %></h3>
    </div>
    <!-- Display the list of expenses -->
    <div id="expense-list" class="expense-list">
      <h3>Expenses for the current month:</h3>
      <ul>
        <% expenses.forEach(expense => { %>
        <li class="expenseList">
          <p class="expenseBlock">
            <%= expense.tag_name %>: <%=
            parseFloat(expense.amount).toLocaleString() %>

            <span class="expenseDate"
              ><%= new Date(expense.date).toLocaleDateString() %></span
            >
          </p>
          <span class="editDelete"
            ><form action="/expense/delete/<%= expense.id %>" method="POST">
              <button type="submit" class="deleteButton">
                <i class="fa-solid fa-trash"></i>
              </button></form
          ></span>
        </li>
        <% }); %>
      </ul>
      <h3>Total Expenses: <%= totalExpenses.toLocaleString() %></h3>
    </div>
  </div>
</div>

<script>
  const monthInput = document.getElementById("month-input");
  const yearInput = document.getElementById("year-input");
  const monthYearForm = document.getElementById("month-year-form");
  const monthYearDisplay = document.getElementById("month-year-display");

  document.getElementById("prev-month").addEventListener("click", () => {
    const currentMonth = parseInt(monthInput.value);
    const currentYear = parseInt(yearInput.value);

    if (currentMonth === 1) {
      monthInput.value = 12;
      yearInput.value = currentYear - 1;
    } else {
      monthInput.value = currentMonth - 1;
    }

    monthYearForm.submit();
  });

  document.getElementById("next-month").addEventListener("click", () => {
    const currentMonth = parseInt(monthInput.value);
    const currentYear = parseInt(yearInput.value);

    if (currentMonth === 12) {
      monthInput.value = 1;
      yearInput.value = currentYear + 1;
    } else {
      monthInput.value = currentMonth + 1;
    }

    monthYearForm.submit();
  });

  // Update the month-year display
  monthYearDisplay.innerText = moment(
    `${yearInput.value}-${monthInput.value}-01`
  ).format("MMMM YYYY");
</script>
